#:import hex kivy.utils.get_color_from_hex

AdminPantallas:
	ScreenPresentation:
	ScreenIndex:

<ScreenPresentation>:
	name: "presentacion"
	FloatLayout:
		size: root.size
	    canvas:
	        Color:
	            rgba: hex('#CA6E1C')
			Rectangle:
				size: self.size
				pos: self.pos

		Button:
			size_hint: (.1, .1)
			pos_hint: {'x':.45, 'y':.45}
			text: "Iniciar"
			#on_press: 
			on_press: 
				root.exec_Validations()
				app.root.current= 'index'

		Label:
			pos_hint: {'x':.007, 'y':.1}
			font_size: "40"
			text: "Bienvenido a EstafetaConnect"


<ScreenIndex>:
	name: "index"